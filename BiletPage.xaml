<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MasterclassApp.BiletPage"
             Title="BiletPage">
    <StackLayout>
        <ListView x:Name="biletListView"
               ItemSelected="OnBiletSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Tip}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Adauga Bilet" Clicked="OnAddBiletClicked" />
    </StackLayout>
</ContentPage>