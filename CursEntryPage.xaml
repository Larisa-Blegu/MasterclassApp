<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MasterclassApp.CursEntryPage"
             Title="CursEntryPage">
    <StackLayout>
        <Entry x:Name="nameEntry" Placeholder="Nume" />
        <Entry x:Name="descriptionEntry" Placeholder="Descriere" />
        <Entry x:Name="locatieEntry" Placeholder="Locatie" />
        <DatePicker x:Name="dateDatePicker"/>
        <Button Text="Save" Clicked="OnSaveButtonClicked" />
    </StackLayout>
</ContentPage>